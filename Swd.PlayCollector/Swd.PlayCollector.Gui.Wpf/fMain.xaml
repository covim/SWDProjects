<Window x:Class="Swd.PlayCollector.Gui.Wpf.fMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Swd.PlayCollector.Gui.Wpf"
        mc:Ignorable="d"
        Title="fMain" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="75*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <Ribbon Grid.Row="0" Grid.ColumnSpan="2">
            
        </Ribbon>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <TextBox Margin="5" Text="Testtext"/>
            <ListBox Margin="5" Height="239" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
            <Label Content="Label" Margin="5"/>

        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2">
            <StackPanel>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="ID and Name" Grid.Column="0" Grid.Row="0"/>
                    <Label Content="Name" Grid.Column="0" Grid.Row="1"/>
                    <Label Content="Setnumber" Grid.Column="0" Grid.Row="2"/>
                    <Label Content="Theme" Grid.Column="0" Grid.Row="3"/>
                    <Label Content="Location" Grid.Column="0" Grid.Row="4"/>
                    <Label Content="Releaseyear" Grid.Column="0" Grid.Row="5"/>
                    <Label Content="Price (EUR)" Grid.Column="0" Grid.Row="6"/>

                    <TextBox Text="name" Grid.Column="1" Grid.Row="1"/>
                    <TextBox Text="setnumber" Grid.Column="1" Grid.Row="2"/>
                    <ComboBox Text="theme" Grid.Column="1" Grid.Row="3"/>
                    <ComboBox Text="location" Grid.Column="1" Grid.Row="4"/>
                    <TextBox Text="releaseyear" Grid.Column="1" Grid.Row="5"/>
                    <TextBox Text="price" Grid.Column="1" Grid.Row="6"/>

                </Grid>
            </StackPanel>
            <DataGrid Height="99" >
                
            </DataGrid>
        </StackPanel>


    </Grid>

</Window>
