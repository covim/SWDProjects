<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <DataTemplate x:Key="templCollectionItemListItem">
        <Border>
            <StackPanel Orientation="Horizontal">
                <Image Source="pack://siteoforigin:,,,/Resources/plus.png" Style="{StaticResource imgListItem}"/>
                <StackPanel Orientation="Vertical">
                    <Label Content="{Binding Name}" Style="{StaticResource Title}"/>
                    <Label Content="{Binding Number}" Style="{StaticResource Number}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </DataTemplate>
    
</ResourceDictionary>